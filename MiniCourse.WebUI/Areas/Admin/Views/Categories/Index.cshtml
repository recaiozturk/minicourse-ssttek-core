
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<CategoryViewModel>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Kategoriler</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }

            <a asp-area="Admin" asp-controller="Categories" asp-action="CategoryCreate" class="btn btn-primary mt-3">Kategori Ekle</a>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Kategori Id</th>
                        <th scope="col">Kategori İsmi</th>
                        <th class="text-end" scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr class="align-middle">
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="CategoryUpdate" asp-route-categoryId="@category.Id" class="btn btn-sm btn-warning mx-1">Güncelle</a>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="CategoryDelete" asp-route-categoryId="@category.Id" class="btn btn-sm btn-danger mx-1">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>