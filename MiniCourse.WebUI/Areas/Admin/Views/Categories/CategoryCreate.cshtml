
@{
    ViewData["Title"] = "CategoryCreate";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model CategoryCreateViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Kategori Oluşturma</h2>
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @ViewData["SuccessMessage"]
                </div>
            }
            <form asp-area="Admin" asp-action="CategoryCreate" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </form>

            <div class="mt-3">
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index">Kategori listesine geri dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

