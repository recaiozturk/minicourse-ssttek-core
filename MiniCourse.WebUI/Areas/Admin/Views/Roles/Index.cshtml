
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<RoleViewModel>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Roller</h1>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }
            <a asp-area="Admin" asp-controller="Roles" asp-action="RoleCreate" class="btn btn-primary mt-3">Rol Ekle</a>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Rol Id</th>
                        <th scope="col">Rol İsmi</th>
                        <th class="text-end" scope="col">İşlemler</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr class="align-middle">
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-roleId="@role.Id" class="btn btn-sm btn-warning mx-1 ">Güncelle</a>
                                <a asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-roleId="@role.Id" class="btn btn-sm btn-danger mx-1">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    
</div>


