
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MiniCourse.WebUI.Members.ViewModels.MemberProfileViewModel

<div class="container">
    <div class="col-md-4 offset-md-4">
        <h1>Profil Bilgileri</h1>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <a asp-controller="Member" asp-action="ProfileUpdate" class="btn btn-primary mt-3">Profil Bilgilerini Güncelle</a>
        <a asp-controller="Member" asp-action="PasswordChange" class="btn btn-success mt-3">Parola Güncelle</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Kullanıcı Adı</th>
                    <th scope="col">Email</th>
                    <th scope="col">Şehir</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.City</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>