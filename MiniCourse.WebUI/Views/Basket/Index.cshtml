
@{
    ViewData["Title"] = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BasketDetailViewModel


<style>
    .ui-w-40 {
        width: 40px !important;
        height: auto;
    }

    .card {
        box-shadow: 0 1px 15px 1px rgba(52,40,104,.08);
    }

    .ui-product-color {
        display: inline-block;
        overflow: hidden;
        margin: .144em;
        width: .875rem;
        height: .875rem;
        border-radius: 10rem;
        -webkit-box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
        vertical-align: middle;
    }

    .float-right {
        float: right;
    }
</style>

<div class="container px-3 my-5 clearfix">

    <div class="card">
        <div class="card-header">
            <h2>Sepet</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered m-0">
                    <thead>
                        <tr>
                            <th class="text-center py-3 px-4" style="min-width: 400px;">Ürün İsmi &amp; Detay</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Fiyat</th>
                            <th class="text-center py-3 px-4" style="width: 120px;">Adet</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Toplam</th>
                            <th class="text-center align-middle py-3 px-0" style="width: 40px;"><a href="#" class="shop-tooltip float-none text-light" title="" data-original-title="Clear cart"><i class="ino ion-md-trash"></i></a></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="p-4">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <a href="#" class="d-block text-dark">@item.CourseName</a>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-right font-weight-semibold align-middle p-4">@item.UnitPrice₺</td>
                                <td class="align-middle p-4"><input disabled type="text" class="form-control text-center" value="@item.Quantity"></td>
                                <td class="text-right font-weight-semibold align-middle p-4">@item.TotalPrice₺</td>
                                <td class="text-center align-middle px-0"><a asp-controller="basket" asp-action="RemoveItemFromBasket" asp-route-courseId="@item.CourseId" class="btn btn-danger btn-sm mx-1">Çıkart</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center pb-4 float-end">
                <div class="d-flex">
                    <div class="text-right mt-4">
                        <div class="text-large"><strong>@Model.TotalPrice₺</strong></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="float-right mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-dar md-btn-flat mt-2 mr-3">Aışverişe devam et</a>
        <a asp-controller="Payment" asp-action="PaymentPage" class="btn  btn-lg btn-outline-dark mt-2">Ödeme Bilgileri</a>
    </div>
</div>


