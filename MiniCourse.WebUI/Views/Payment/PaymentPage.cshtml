            <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>

        </div>
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Billing address</h4>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <form id="paymentForm" asp-controller="Payment" asp-action="PaymentPage" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="OrderId"  value="@ViewBag.OrderId" />
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="NameForBill" class="form-label">First name</label>
                        <input asp-for="NameForBill" class="form-control" value="">
                        <span asp-validation-for="NameForBill" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="LastNameForBill" class="form-label">Last name</label>
                        <input asp-for="LastNameForBill" class="form-control" value="">
                        <span asp-validation-for="LastNameForBill" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="AdressForBill" class="form-label">Address</label>
                        <input asp-for="AdressForBill" class="form-control">
                        <span asp-validation-for="AdressForBill" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>


                </div>

                <hr class="my-4">

                <h4 class="mb-3">Payment</h4>
                <div class="row gy-3">
                    <div class="col-md-6">
                        <label asp-for="CardHolderName" class="form-label">Name on card</label>
                        <input asp-for="CardHolderName" class="form-control">
                        <span asp-validation-for="CardHolderName" class="text-danger"></span>
                        <small class="text-muted">Full name as displayed on card</small>
                        <div class="invalid-feedback">
                            Name on card is required
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CardNumber" class="form-label">Credit card number</label>
                        <input asp-for="CardNumber" class="form-control">
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Credit card number is required
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="ExpiryDate" class="form-label">Expiration</label>
                        <input asp-for="ExpiryDate" class="form-control">
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Expiration date required
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CVV" class="form-label">CVV</label>
                        <input asp-for="CVV" class="form-control">
                        <span asp-validation-for="CVV" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Security code required
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <button id="paymentButton" class="w-100 btn btn-primary btn-lg" type="submit">
                    <div class="spinner-border spinner-border-sm d-none" id="buttonSpinner" role="status" aria-hidden="true"></div>
                    <span id="buttonText">Ödeme Yap</span>

                </button>
            </form>
        </div>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    @section Scripts{
        <script>
            $(document).ready(function () {
                // Eğer validasyon hatası varsa butonu yeniden etkinleştir

            });
            $("#paymentButton").prop("disabled", false);
            $("#buttonSpinner").css("display", "none");
        </script>
    }
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#paymentForm").on("submit", function (e) {
                var $form = $(this);
                var $button = $("#paymentButton");
                var $spinner = $("#buttonSpinner");
                var $buttonText = $("#buttonText");

                // Validasyon kontrolü
                if (!$form.valid()) {
                    // Form geçerli değilse, spinner çalışmasın
                    e.preventDefault();
                    return;
                }

                // Form geçerliyse spinner'ı göster ve butonu devre dışı bırak
                $spinner.removeClass("d-none");
                $buttonText.text("Ödeme İşleniyor...");
                $button.prop("disabled", true);
            });
        });
    </script>
}





